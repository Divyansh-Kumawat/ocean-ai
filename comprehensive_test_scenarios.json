    {
      "category": "Security Testing",
      "scenarios": [
        {
          "id": "SEC-001",
          "title": "Payment Data Security",
          "description": "Verify secure handling of payment information",
          "checks": [
            "Credit card numbers are not stored in plain text",
            "CVV codes are not logged or stored",
            "Payment forms use HTTPS encryption",
            "PCI DSS compliance verification"
          ]
        },
        {
          "id": "SEC-002",
          "title": "Input Validation Security",
          "description": "Test for injection vulnerabilities",
          "test_inputs": [
            "<script>alert('xss')</script>",
            "'; DROP TABLE orders; --",
            "../../../etc/passwd",
            "javascript:alert('test')"
          ],
          "expected_result": "All malicious inputs properly sanitized"
        }
      ]
    },
