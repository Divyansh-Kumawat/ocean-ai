{
  "test_scenarios": [
    {
      "category": "Positive Testing",
      "scenarios": [
        {
          "id": "POS-001",
          "title": "Successful Product Purchase Flow",
          "description": "Complete end-to-end purchase with valid information",
          "steps": [
            "Navigate to product page",
            "Add product to cart with quantity 1",
            "Proceed to checkout",
            "Enter valid email: test@example.com",
            "Fill shipping address with valid US address",
            "Select Standard Shipping ($5.99)",
            "Enter valid credit card information",
            "Apply valid discount code SAVE15",
            "Review order and complete purchase"
          ],
          "expected_result": "Order confirmation page displayed with order number",
          "test_data": {
            "email": "test@example.com",
            "shipping_address": {
              "first_name": "John",
              "last_name": "Doe",
              "street": "123 Main Street",
              "city": "New York",
              "state": "NY",
              "zip": "10001",
              "phone": "(555) 123-4567"
            },
            "payment": {
              "card_number": "4111111111111111",
              "expiry": "12/25",
              "cvv": "123",
              "name": "John Doe"
            },
            "discount_code": "SAVE15"
          }
        },
        {
          "id": "POS-002",
          "title": "Guest Checkout with PayPal",
          "description": "Complete purchase using PayPal without account creation",
          "steps": [
            "Add item to cart",
            "Select guest checkout option",
            "Enter email address",
            "Fill shipping information",
            "Select Express Shipping",
            "Choose PayPal payment method",
            "Complete PayPal authentication",
            "Confirm order"
          ],
          "expected_result": "PayPal payment processed and order confirmed"
        }
      ]
    },
    {
      "category": "Negative Testing",
