            },
            {
              "quantity": 1,
              "expected": "Valid minimum quantity"
            },
            {
              "quantity": 99,
              "expected": "Valid maximum quantity"
            },
            {
              "quantity": 100,
              "expected": "Error: Maximum 99 items allowed"
            }
          ]
        },
        {
          "id": "BND-002",
          "title": "Free Shipping Threshold",
