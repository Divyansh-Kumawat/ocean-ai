{
  "api_endpoints": {
    "base_url": "https://api.shopmaster.com/v1",
    "authentication": {
      "type": "Bearer Token",
      "header": "Authorization: Bearer {token}",
      "login_endpoint": "/auth/login",
      "refresh_endpoint": "/auth/refresh"
    },
    "cart_management": {
      "get_cart": {
        "endpoint": "/cart",
        "method": "GET",
        "description": "Retrieve current cart contents",
        "response": {
          "cart_id": "string",
          "items": "array",
          "subtotal": "number",
          "tax": "number",
          "total": "number"
        }
      },
      "add_to_cart": {
        "endpoint": "/cart/items",
        "method": "POST",
        "description": "Add product to cart",
        "parameters": {
          "product_id": "string (required)",
          "quantity": "number (required, min: 1, max: 99)",
          "variant_id": "string (optional)"
        },
        "response": {
          "success": "boolean",
          "message": "string",
          "cart_total": "number"
        }
      },
      "update_cart_item": {
        "endpoint": "/cart/items/{item_id}",
        "method": "PUT",
        "description": "Update cart item quantity",
        "parameters": {
          "quantity": "number (required, min: 0, max: 99)"
        }
      },
      "remove_from_cart": {
        "endpoint": "/cart/items/{item_id}",
        "method": "DELETE",
        "description": "Remove item from cart"
      }
    },
    "discount_management": {
      "validate_discount": {
        "endpoint": "/discounts/validate",
        "method": "POST",
        "description": "Validate discount code",
        "parameters": {
          "code": "string (required)",
          "cart_total": "number (required)"
        },
        "response": {
          "valid": "boolean",
          "discount_type": "string",
          "discount_value": "number",
          "minimum_order": "number",
          "error_message": "string"
        }
      },
      "apply_discount": {
        "endpoint": "/cart/discount",
        "method": "POST",
        "description": "Apply discount to cart",
        "parameters": {
          "discount_code": "string (required)"
        }
      }
    },
    "shipping": {
      "calculate_shipping": {
        "endpoint": "/shipping/calculate",
        "method": "POST",
        "description": "Calculate shipping costs",
        "parameters": {
          "address": {
            "street": "string (required)",
            "city": "string (required)",
            "state": "string (required)",
            "zip_code": "string (required)",
            "country": "string (required)"
          },
          "cart_weight": "number",
          "cart_value": "number"
        },
        "response": {
          "shipping_options": [
            {
              "id": "standard",
              "name": "Standard Shipping",
              "cost": 5.99,
              "delivery_time": "5-7 business days"
            },
            {
              "id": "express",
              "name": "Express Shipping", 
              "cost": 12.99,
              "delivery_time": "2-3 business days"
            },
            {
              "id": "overnight",
              "name": "Overnight Delivery",
              "cost": 24.99,
              "delivery_time": "Next business day"
            }
          ]
        }
      }
    },
    "payment_processing": {
      "create_payment_intent": {
        "endpoint": "/payments/create-intent",
        "method": "POST",
        "description": "Create payment intent for checkout",
        "parameters": {
          "amount": "number (required)",
          "currency": "string (default: USD)",
          "payment_method": "string (required)"
        }
      },
      "process_payment": {
        "endpoint": "/payments/process",
        "method": "POST",
        "description": "Process payment transaction",
        "parameters": {
          "payment_intent_id": "string (required)",
          "payment_details": {
            "card_number": "string (required, 13-19 digits)",
            "expiry_month": "number (required, 1-12)",
            "expiry_year": "number (required)",
            "cvv": "string (required, 3-4 digits)",
            "cardholder_name": "string (required)"
          },
          "billing_address": {
            "street": "string (required)",
            "city": "string (required)",
            "state": "string (required)",
            "zip_code": "string (required)"
          }
        }
      }
    },
    "order_management": {
      "create_order": {
        "endpoint": "/orders",
        "method": "POST",
        "description": "Create new order after successful payment",
        "parameters": {
          "cart_id": "string (required)",
          "payment_intent_id": "string (required)",
          "shipping_address": "object (required)",
          "billing_address": "object (required)",
          "shipping_method": "string (required)"
        }
      },
      "get_order": {
        "endpoint": "/orders/{order_id}",
        "method": "GET",
        "description": "Retrieve order details"
      },
      "track_order": {
        "endpoint": "/orders/{order_id}/tracking",
        "method": "GET",
        "description": "Get order tracking information"
      }
    }
  },
